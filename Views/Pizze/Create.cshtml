@model Pizza;

<div class="container">
     <form asp-controller="Pizze" asp-action="Create" method="post">
        @Html.AntiForgeryToken()
        <div class="mb-3">
            <strong>Nome:</strong>
            <input asp-for="name" class="d-block w-100" />
            <span asp-validation-for="name" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <strong>Descrizione:</strong>
            <input asp-for="description" class="d-block w-100" />
            <span asp-validation-for="description" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <strong>Link foto:</strong>
            <input asp-for="fotoLink" class="d-block w-100" />
            <span asp-validation-for="fotoLink" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <strong>Prezzo:</strong>
            <input asp-for="prezzo" class="d-block w-100" />
            <span asp-validation-for="prezzo" class="text-danger"></span>
        </div>
        <div class="text-end">
        <input type="submit" class="btn btn-small btn-info" value="Salva">
        </div>
     </form>
     <a class="btn-primary rounded-pill py-2 px-4" href="/Pizze/Index">Indietro</a>
</div>

